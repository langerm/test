<?xml version='1.0' encoding='utf-8'?>
<widget id="com.exemple.hello" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DbDir</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="melanie.langer@rsvconcept.fr" href="http://rsvconcept.com">
       RSv Concept Team
    </author>
    <content src="index.html" />   //The app's starting page
    <plugin name="cordova-plugin-inappbrowser" spec="1" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <!-- Allow links to example.com -->
    <allow-navigation href="http://example.com/*" />
    <!-- Allow links to example.com -->
    <allow-navigation href="http://www.google.de" />
    <allow-navigation href="http://rsv-server:8089/*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.2.1" />
    <engine name="android" spec="~5.2.2" />

    <icon src="www/img/icon_tdbdir.png" />
</widget>
